        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/task_adapter_vreme_kreiranja"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/task_adapter_vreme_zavrsetka"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

</LinearLayout>